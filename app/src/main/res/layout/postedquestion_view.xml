<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:showIn="@layout/activity_user_profile">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin">

        <TextView
            android:id="@+id/question_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            tools:text="Question title" />

        <TextView
            android:id="@+id/question_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_below="@id/question_title"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
            tools:text="Question description" />

        <ImageView
            android:id="@+id/overflow"
            android:layout_width="@dimen/ic_more_options_width"
            android:layout_height="@dimen/ic_more_options_height"
            android:layout_alignParentRight="true"
            android:layout_below="@id/question_title"
            android:layout_marginTop="@dimen/ic_more_options_margin_top"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_menu_more_options"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>
